        nav#mainmenu.navbar.navbar-default.navbar-fixed-top
            .container
                .navbar-header
                    a.navbar-brand.brand.visible-xs
                        img.brand-image.img-circle.img-responsive(ng-src="{{ logo_url }}")
                    button.navbar-toggle.collapsed(type='button',data-toggle="collapse",data-target="#ataniMenu")
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                .collapse.navbar-collapse#ataniMenu
                    ul.nav.navbar-nav.text-uppercase.nav-tabs.nav-justified
                        li(ng-repeat="mnu in menus",class="{{ mnu['css'] }}",id="{{ mnu['id']}}")
                            a.btn.toogleConent(data-target="antanicontent",data-value= "{{ mnu['index'] }}")
                                span(class="{{ mnu['icon'] }}")
                                | &nbsp;{{ mnu['name'] }}
        .container
            .row
                .col-md-12.col-xs-12
                    a(href='/',title='Home')
                        img(class='center-block img-responsive',alt='Banner Image',ng-src="{{ banner_url }}")
